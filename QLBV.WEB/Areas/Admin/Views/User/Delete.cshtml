@model IEnumerable<QLBV.DAL.Entities.User>

<h2>Users</h2>
<a href="@Url.Action("Create", "User", new { area = "Admin" })" class="btn btn-primary mb-3">Add New User</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>FullName</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
                <tr>
                    <td>@u.Username</td>
                    <td>@u.FullName</td>
                    <td>@u.Email</td>
                    <td>@u.Phone</td>
                    <td>@u.Role</td>
                    <td>
                        <a href="@Url.Action("Details", "User", new { area = "Admin", id = u.UserId })" class="btn btn-info btn-sm">View</a>
                        <a href="@Url.Action("Edit", "User", new { area = "Admin", id = u.UserId })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "User", new { area = "Admin", id = u.UserId })" 
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this user?');">
                            Delete
                        </a>
                    </td>
                </tr>
        }
    </tbody>
</table>
