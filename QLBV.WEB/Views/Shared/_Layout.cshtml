<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QLBV</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');
        body {
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
            -webkit-font-smoothing: antialiased;
            -moz-osx-font-smoothing: grayscale;
        }

        /* Fade in animation */
        @@keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-fade-in {
            animation: fadeIn 0.8s ease-out forwards;
        }

        /* Navbar */
        #main-navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 50;
            transition: background-color 0.3s ease, box-shadow 0.3s ease, border-bottom-color 0.3s ease;
            background-color: transparent;
            border-bottom: 1px solid transparent;
        }
        #main-navbar.scrolled {
            background-color: white;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            border-bottom-color: #e5e7eb;
        }
    </style>
</head>
<body class="flex flex-col min-h-screen">

    <nav id="main-navbar" class="h-16">
        <div class="container mx-auto h-full flex items-center justify-between px-6">
            <a href="/" class="text-2xl font-bold text-white transition-colors duration-300" id="logo-text">QLBV</a>

            <div class="hidden md:flex space-x-6 items-center">
                <a href="/" class="text-white hover:text-cyan transition-colors duration-300">Trang chủ</a>
                <a href="/Appointment/Create" class="text-white hover:text-cyan transition-colors duration-300">Đặt lịch</a>

                @if (User.Identity.IsAuthenticated)
                {
                            <a class="text-white hover:text-cyan transition-colors duration-300">Chào, @User.Identity.Name</a>
                        <a class="bg-red-500 text-white font-semibold px-4 py-2 rounded-full hover:bg-red-600 transition-colors duration-300" href="/Account/Logout">Đăng xuất</a>
                }
                else
                {
                        <a class="text-white hover:text-cyan transition-colors duration-300" href="/Account/Register">Đăng ký</a>
                        <a class="bg-cyan-600 text-white font-semibold px-4 py-2 rounded-full hover:bg-cyan-700 transition-colors duration-300" href="/Account/Login">Đăng nhập</a>
                }
            </div>
        </div>
    </nav>

    <main class="flex-grow">
        @RenderBody()
    </main>

    <footer class="bg-gray-100 text-gray-700 py-8 mt-auto">
        <div class="container mx-auto text-center text-sm">
            &copy; 2025 - Hệ thống đặt lịch khám QLBV. All rights reserved.
        </div>
    </footer>

    <script>
    const navbar = document.getElementById('main-navbar');
    const logoText = document.getElementById('logo-text');
    const navLinks = document.querySelectorAll('#main-navbar a');

    // Kiểm tra nếu đang ở trang Home
    const isHomePage = window.location.pathname === '/';

    if (isHomePage) {
        // Chỉ trang Home mới có hiệu ứng scroll
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                navbar.classList.add('scrolled');
                logoText.classList.remove('text-white');
                logoText.classList.add('text-gray-800');

                navLinks.forEach(a => {
                    if (!a.classList.contains('bg-cyan-600') && !a.classList.contains('bg-red-500')) {
                        a.classList.remove('text-white');
                        a.classList.add('text-gray-800');
                    }
                });
            } else {
                navbar.classList.remove('scrolled');
                logoText.classList.remove('text-gray-800');
                logoText.classList.add('text-white');

                navLinks.forEach(a => {
                    if (!a.classList.contains('bg-cyan-600') && !a.classList.contains('bg-red-500')) {
                        a.classList.remove('text-gray-800');
                        a.classList.add('text-white');
                    }
                });
            }
        });
    } else {
        // Các trang khác: navbar luôn hiển thị màu trắng, chữ màu đen
        navbar.classList.add('scrolled'); // background trắng + shadow
        logoText.classList.remove('text-white');
        logoText.classList.add('text-gray-800');

        navLinks.forEach(a => {
            if (!a.classList.contains('bg-cyan-600') && !a.classList.contains('bg-red-500')) {
                a.classList.remove('text-white');
                a.classList.add('text-gray-800');
            }
        });
    }

    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>