@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="w-full">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">

        <div class="bg-white border-b-4 border-indigo-500 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1 h-full">
            <div class="p-6 flex flex-col h-full">
                <h5 class="text-2xl font-semibold mb-2 text-gray-800">Users</h5>
                <p class="text-gray-600 flex-grow mb-4">Manage all users in the system.</p>
                <a href="@Url.Action("Index", "User", new { area = "Admin" })" class="inline-block bg-indigo-500 text-white font-semibold px-6 py-2 rounded-full text-center hover:bg-indigo-600 transition-colors duration-300 mt-auto">Go</a>
            </div>
        </div>

        <div class="bg-white border-b-4 border-teal-500 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1 h-full">
            <div class="p-6 flex flex-col h-full">
                <h5 class="text-2xl font-semibold mb-2 text-gray-800">Departments</h5>
                <p class="text-gray-600 flex-grow mb-4">View and manage hospital departments.</p>
                <a href="@Url.Action("Index", "Department", new { area = "Admin" })" class="inline-block bg-teal-500 text-white font-semibold px-6 py-2 rounded-full text-center hover:bg-teal-600 transition-colors duration-300 mt-auto">Go</a>
            </div>
        </div>

        <div class="bg-white border-b-4 border-amber-500 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1 h-full">
            <div class="p-6 flex flex-col h-full">
                <h5 class="text-2xl font-semibold mb-2 text-gray-800">Disease Categories</h5>
                <p class="text-gray-600 flex-grow mb-4">Manage categories of diseases.</p>
                <a href="@Url.Action("Index", "DiseaseCategory", new { area = "Admin" })" class="inline-block bg-amber-500 text-white font-semibold px-6 py-2 rounded-full text-center hover:bg-amber-600 transition-colors duration-300 mt-auto">Go</a>
            </div>
        </div>

        <div class="bg-white border-b-4 border-rose-500 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1 h-full">
            <div class="p-6 flex flex-col h-full">
                <h5 class="text-2xl font-semibold mb-2 text-gray-800">Diseases</h5>
                <p class="text-gray-600 flex-grow mb-4">Check and manage diseases.</p>
                <a href="@Url.Action("Index", "Disease", new { area = "Admin" })" class="inline-block bg-rose-500 text-white font-semibold px-6 py-2 rounded-full text-center hover:bg-rose-600 transition-colors duration-300 mt-auto">Go</a>
            </div>
        </div>

        <div class="bg-white border-b-4 border-purple-500 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 transform hover:-translate-y-1 h-full">
            <div class="p-6 flex flex-col h-full">
                <h5 class="text-2xl font-semibold mb-2 text-gray-800">Schedules</h5>
                <p class="text-gray-600 flex-grow mb-4">Manage doctors' schedules and availability.</p>
                <a href="@Url.Action("Index", "Schedule", new { area = "Admin" })" class="inline-block bg-purple-500 text-white font-semibold px-6 py-2 rounded-full text-center hover:bg-purple-600 transition-colors duration-300 mt-auto">Go</a>
            </div>
        </div>

    </div>
</div>