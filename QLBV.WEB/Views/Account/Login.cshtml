@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg border border-gray-200 animate-fade-in">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Đăng nhập</h2>
        <p class="text-center text-gray-500 mb-8">Chào mừng bạn quay trở lại hệ thống của chúng tôi.</p>

        <form asp-action="Login" method="post" class="space-y-6">
            <div>
                <label for="username" class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
                <input type="text" name="username" id="username" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 transition duration-200" placeholder="Nhập tên đăng nhập của bạn" />
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                <input type="password" name="password" id="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 transition duration-200" placeholder="Nhập mật khẩu" />
            </div>

            <button type="submit" class="w-full bg-cyan-600 text-white font-semibold py-3 rounded-lg hover:bg-cyan-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2">
                Đăng nhập
            </button>

            <div class="mt-4 text-center text-sm">
                <a href="/Account/Register" class="text-cyan-600 hover:text-cyan-700 font-medium transition-colors duration-200">
                    Chưa có tài khoản? Đăng ký ngay
                </a>
            </div>
        </form>
    </div>
</div>