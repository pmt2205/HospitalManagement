@model QLBV.DTO.ScheduleDto

<h2>Delete Schedule</h2>

<h4>Are you sure you want to delete this schedule?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">DoctorId</dt>
        <dd class="col-sm-10">@Model.DoctorId</dd>
        <dt class="col-sm-2">Work Date</dt>
        <dd class="col-sm-10">@Model.WorkDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime</dd>
        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="ScheduleId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
