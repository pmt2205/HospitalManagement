@model QLBV.DTO.UserDto
@{
    ViewData["Title"] = "Đăng ký";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100 px-4">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg border border-gray-200 animate-fade-in">
        <h2 class="text-3xl font-bold text-center text-gray-800 mb-6">Đăng ký tài khoản</h2>
        <p class="text-center text-gray-500 mb-8">Hãy tạo tài khoản để đặt lịch khám trực tuyến.</p>

        <form asp-action="Register" method="post" class="space-y-6">
            <div>
                <label asp-for="Username" class="block text-sm font-medium text-gray-700 mb-1">Tên đăng nhập</label>
                <input asp-for="Username" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 transition duration-200" placeholder="Chọn tên đăng nhập" />
                <span asp-validation-for="Username" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Mật khẩu</label>
                <input type="password" name="password" id="password" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 transition duration-200" placeholder="Tạo mật khẩu mạnh" />
            </div>

            <div>
                <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Họ và tên</label>
                <input asp-for="FullName" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 transition duration-200" placeholder="Nhập họ và tên của bạn" />
                <span asp-validation-for="FullName" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-cyan-500 transition duration-200" placeholder="Nhập địa chỉ email" />
                <span asp-validation-for="Email" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <button type="submit" class="w-full bg-cyan-600 text-white font-semibold py-3 rounded-lg hover:bg-cyan-700 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cyan-500 focus:ring-offset-2">
                Đăng ký
            </button>

            <div class="mt-4 text-center text-sm">
                <a href="/Account/Login" class="text-cyan-600 hover:text-cyan-700 font-medium transition-colors duration-200">
                    Đã có tài khoản? Đăng nhập
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}