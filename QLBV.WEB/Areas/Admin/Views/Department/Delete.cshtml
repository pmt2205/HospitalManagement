@model QLBV.DTO.DepartmentDto

@{
    ViewData["Title"] = "Xóa Phòng Ban";
    Layout = "_AdminLayout";
}

<div class="p-6 bg-white rounded-lg shadow-md max-w-md mx-auto mt-10 text-center">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">@ViewData["Title"]</h2>

    <p class="mb-6 text-gray-700">Bạn có chắc muốn xóa phòng ban <span class="font-semibold">@Model.Name</span> không?</p>

    <form action="/Admin/Department/Delete" method="post" class="flex justify-center space-x-4">
        <input type="hidden" name="id" value="@Model.DepartmentId" />
        <a href="/Admin/Department" class="px-4 py-2 bg-gray-300 rounded hover:bg-gray-400">Hủy</a>
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Xóa</button>
    </form>
</div>
