@model List<QLBV.DTO.DoctorDto>
@{
    ViewData["Title"] = "Chọn bác sĩ";
}

<div class="relative py-24 px-6 md:px-0 bg-gray-50 flex-grow animate-fade-in">
    <div class="container mx-auto max-w-4xl">
        <h2 class="text-3xl md:text-4xl font-extrabold text-center text-gray-800 mb-8 leading-tight">
            Chọn bác sĩ để đặt lịch
        </h2>
        <p class="text-center text-gray-600 mb-12 max-w-2xl mx-auto">
            Vui lòng chọn một bác sĩ từ danh sách dưới đây để xem lịch làm việc và tiến hành đặt lịch hẹn.
        </p>

        @if (Model != null && Model.Any())
        {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                @foreach (var doc in Model)
                {
                            <a href="/Appointment/Schedule?doctorId=@doc.DoctorId"
                               class="bg-white p-6 border border-gray-200 rounded-lg shadow-md hover:shadow-lg hover:border-cyan-400 transition-all duration-300 transform hover:-translate-y-1 block">
                                <div class="flex items-center space-x-4">
                                     <div class="bg-gray-100 rounded-full p-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-cyan-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                                            <circle cx="12" cy="7" r="4"></circle>
                                        </svg>
                                    </div>
                                    <div>
                                        <h3 class="text-lg font-semibold text-gray-800">@doc.FullName</h3>
                                        <p class="text-sm text-gray-500">@doc.DepartmentName</p>
                                    </div>
                                </div>
                            </a>
                }
                </div>
        }
        else
        {
                <div class="text-center text-gray-500 py-12">
                    <p>Không có bác sĩ nào trong khoa này.</p>
                    <a href="/Appointment/Departments" class="mt-4 inline-block text-cyan-600 hover:text-cyan-800 transition-colors duration-300">Quay lại danh sách khoa</a>
                </div>
        }
    </div>
</div>